
{% extends "layout.html.twig" %}

{% block title %}login{% endblock %}

{% block container %}
    <h1>Login</h1>
    <form method="POST">
        <div class="row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="control-label" for="username">Username or email address</label>
                    <input autofocus="" class="form-control" id="username" name="username" placeholder="Username" tabindex="1" title="" type="text" value="">
                </div>

            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="control-label" for="password">Password</label>

                    <small>
                        <a href="/password-reset">Forgot your password?</a>
                    </small>

                    <input class="form-control" id="password" name="password" tabindex="2" title="" type="password" value="">
                </div>
            </div>
        </div>

        {% if error_msg %}
        <div class="row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <p class="bg-danger">{{ error_msg }}</p>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-md-4">
                <input type="submit" value="Login" class="btn btn-primary" tabindex="3">
            </div>
        </div>
    </form>
    </div> <!-- /container -->
{% endblock %}