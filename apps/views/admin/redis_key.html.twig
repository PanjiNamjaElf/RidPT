{% extends "admin/layout.html.twig" %}

{% block panel %}
    <h1>Key: <code>{{ key }}</code></h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Key</th>
            <td><input type="text" value="{{ key }}" readonly="readonly"
                       style="border: none; width: 100%; font-family: Menlo, Monaco, Consolas, 'Courier New', monospace;"/>
            </td>
        </tr>
        <tr>
            <th>Type</th>
            <td><code>{{ type }}</code></td>
        </tr>
        <tr>
            <th>Size</th>
            <td>{{ size }} Bytes ({{ size|format_bytes }})
            </td>
        </tr>
        <tr>
            <th>Expiration</th>
            <td>
                {% if ttl < 0 %}
                    <span class="label label-warning">No expiration set</span>
                {% else %}
                    <code>{{ ttl }}</code> Seconds from now (<code>{{ expiration|date("Y-m-d h:i:s") }}</code>)
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    {% if type == "String" %}

        <h2>String Value</h2>
        <figure><pre><code>{{ value | json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre></figure>

    {% elseif type == "List" %}

        <h2>Values</h2>
        <ol>
            {% for item in value %}
                <li><code>{{ item }}</code></li>
            {% endfor %}
        </ol>

    {% elseif type == "Set" %}

        <h2>Values</h2>
        <ul>
            {% for item in value|sort %}
                <li><code>{{ item }}</code></li>
            {% endfor %}
        </ul>

    {% elseif type == "Hash" %}

        <h2>Hash keys and values</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Key</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {% for k,v in value %}
                <tr>
                    <td></td>
                    <td><code>{{ k }}</code></td>
                    <td><code>{{ v }}</code></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% elseif type == "Sorted Set" %}

        <h2>Sorted set entries</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Rank</th>
                <th>Score</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {% for k,v in value %}
                <tr>
                    <td>{{ loop.index0 }}</td>
                    <td><code>{{ v }}</code></td>
                    <td><code>{{ k }}</code></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}

{% endblock %}
